.answer
  = form_with model: @message, local: true do |f|
    .first-box
      .first-box_question
        = Question.find(1).name
      .first-box_answer
        = f.collection_select :first_answer,Yesno.where(index: 1), :id, :name,{include_blank: "選択してください"},  {class: "details_select"}

    .answer-btn
      = f.submit "answer", class: "answer-box"
