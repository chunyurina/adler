.answer
  = form_with model: @message, local: true do |f|
    .first-box
      .first-box_question
        = Question.find(1).name
      .first-box_answer
        = f.collection_select :first_answer,Yesno.all, :id, :name,{include_blank: "選択してください"},  {class: "details_select"}

    .second-box
      .second-box_question
        = Question.find(2).name
      .secon-box_answer
        = f.collection_select :second_answer,Yesno.all, :id, :name,{include_blank: "選択してください"},  {class: "details_select"}

    .third-box
      .third-box_question
        = Question.find(3).name
      .third-box_anser
        = f.collection_select :third_answer,Yesno.all, :id, :name,{include_blank: "選択してください"},  {class: "details_select"}

    .answer-btn
      = f.submit "answer", class: "answer-box"
